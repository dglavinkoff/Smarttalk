@model SmartTalk.ViewModels.QuestionAskViewModel

@{
    ViewBag.Title = "AskQuestion";
}

<div class="container">

    <h2>Задай въпрос</h2>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>QuestionAskViewModel</legend>

            <label>Избери категория</label>
            <div class="editor-field">
                @Html.DropDownList("Category", Model.Categories)
            </div>

            <label>
                Въпрос
            </label>
            <div class="editor-field">
                @Html.EditorFor(model => model.QuestionBrief)
                @Html.ValidationMessageFor(model => model.QuestionBrief)
            </div>

            <label>
                Описание
            </label>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            @Html.HiddenFor(model => model.UrlReferrer)

            <p>
                <button class="btn btn-primary" type="submit" >Задай въпрос</button>
            </p>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
